            android:layout_marginBottom="@dimen/padding_medium"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="@dimen/padding_extraSmall"
            android:elevation="0.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/recipe_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="Chicken Biryani"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src=""
                        android:layout_marginRight="@dimen/padding_medium"/>

                    <LinearLayout
                        android:layout_width="109dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/cusisineType1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_gravity="center"
                            android:text="Italian"
                            android:textColor="#ffffff"
                            android:textStyle="bold"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/calories1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFDD00"
                            android:layout_gravity="center"
                            android:text="400 cal"
                            android:textColor="#ffffff"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="4dp"
                            android:text="Prep time"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/prepTime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="20 min"
                            android:padding="2dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="12dp"
                            android:padding="4dp"
                            android:text="Cook time"
                            />

                        <TextView
