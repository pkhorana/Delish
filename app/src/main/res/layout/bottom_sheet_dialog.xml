                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#0088FF"
                            android:padding="2dp"
                            android:text="2 hrs"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

